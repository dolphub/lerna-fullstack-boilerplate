{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "paths": {
      "*": ["./node_modules/@types/*", "*"]
    }
  }
}
