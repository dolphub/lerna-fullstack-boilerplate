{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib/types",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module": "commonjs",
    "outDir": "./lib",
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/@types/*", "*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.story.ts*", "src/**/*.test.ts*"]
}
